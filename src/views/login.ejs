<% if(errorMessage){ %>
<div class="alert alert-danger" role="alert"><%= errorMessage %></div>
<%}%>
<form action="/login" method="post">
  <div class="container signin-singnup">
    <div class="top"></div>
    <div class="bottom"></div>
    <div class="center">
      <h2>Sign In</h2>
      <input
        type="email"
        class="form-control"
        id="email"
        name="email"
        placeholder="Email"
        required
      />
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
        placeholder="Password"
        required
      />
      <button type="submit" class="btn btn-dark">Login</button>
    </div>
  </div>
</form>
